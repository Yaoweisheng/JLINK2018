<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jlink.dao.RoleDeptDao" >
  <resultMap id="BaseResultMap" type="com.jlink.entity.RoleDept" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="dept_no" property="deptNo" jdbcType="VARCHAR" />
    <result column="role_id" property="roleId" jdbcType="INTEGER" />
  </resultMap>
  <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.jlink.entity.RoleDept" >
    insert into role_dept (dept_no, role_id)
    values (#{deptNo,jdbcType=VARCHAR}, #{roleId,jdbcType=INTEGER}
      )
  </insert>
  <insert id="batchSave" useGeneratedKeys="true" keyProperty="id">
    insert ignore into role_dept(dept_no, role_id)
    values
    <foreach collection="deptNos" item="mno" separator=",">
      (#{mno},#{roleId})
    </foreach>
  </insert>
  <delete id="deleteByRoleId" parameterType="Integer">
    delete from role_dept where role_id = #{roleId}
  </delete>
  <select id="getDeptsByRoleId" resultType="String" parameterType="Integer">
    select dept_no
    from role_dept
    where role_id = #{roleId}
    order by dept_no
  </select>
</mapper>